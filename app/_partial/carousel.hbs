{{! <!-- begin carousel slides -->}}
<div class="slideshow-wrapper">
{{! <!-- begin carousel thumbnails -->}}
<div class="carousel-thumbs-container">
  <ul data-orbit data-options="resume_on_mouseout: false; slide_number: false; navigation_arrows: true; timer: false; orbit-stack-on-small:true; bullets:false">
    {{#item-group}}
    <li data-orbit-slide="headline-thumb-group-{{@index}}">
      <ul class="large-block-grid-4">
        {{#items}}
        <li>
          <a href="#">
            <img src="{{slide-image}}">
          </a>
            <div>{{!-- <p class="title-abbrev">{{title-abbrev}}</p> --}}
        {{#if flag.featured}}
        <p><i class="icon-star"></i> {{../channel}} featured item</p>
        {{/if}}
        {{#if flag.story-of-the-week}}
        <p><i class="icon-bookmark"></i> {{../channel}} story of the week</p>
        {{/if}}
      <strong><a href="#">{{title}}</a></strong>
      <p class="citation">{{citation}}</p>
      {{#expert-comment}}
      <div class="expert-comment-container">
        <div class="comment-meta">
        <h5><i class="icon-comment"></i>&nbsp;Expert Comment</h5>
        {{> author-list}}
        </div><!--/.comment-meta-->
      </div><!--/.expert-comment-container-->
      {{/expert-comment}}
            </div>
          </a>
        </li>
        {{/items}}
      </ul>
    </li>
    {{/item-group}}
  </ul>
</div><!--/.carousel-thumbs-container-->
</div><!--/.sildeshow-wrapper-->
