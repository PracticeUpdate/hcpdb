{{! <!-- begin carousel slides -->}}
<div id="carousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    {{#item-group}}
    {{#items}}
    <li data-target="#carouse" data-slide-to="{{@index}}"></li>
    {{/items}}
    {{/item-group}}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    {{#item-group}}
    {{#items}}
    <div class="item">
      <img src="{{slide-image}}">
      <div class="carousel-caption">
        {{#if flag.featured}}
        <p><i class="icon-star"></i> {{../channel}} featured item</p>
        {{/if}}
        {{#if flag.story-of-the-week}}
        <p><i class="icon-bookmark"></i> {{../channel}} story of the week</p>
        {{/if}}
      <strong><a href="#">{{title}}</a></strong>
      <p class="citation">{{citation}}</p>
      {{#expert-comment}}
      <div class="expert-comment-container">
        <div class="comment-meta">
        <h5><i class="icon-comment"></i>&nbsp;Expert Comment</h5>
        {{> author-list}}
        </div><!--/.comment-meta-->
      </div><!--/.expert-comment-container-->
      {{/expert-comment}}
      </div>
    </div>
    {{/items}}
    {{/item-group}}
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#carousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</div>
